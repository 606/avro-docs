# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# ============================================
# AUTH PROVIDERS (configure any or all)
# ============================================

# GitHub OAuth
# Create OAuth App at: https://github.com/settings/developers
# Callback URL: https://your-domain.com/api/auth/callback/github
GITHUB_ID=
GITHUB_SECRET=

# Google OAuth
# Create OAuth App at: https://console.cloud.google.com/apis/credentials
# Callback URL: https://your-domain.com/api/auth/callback/google
GOOGLE_ID=
GOOGLE_SECRET=

# Discord OAuth  
# Create OAuth App at: https://discord.com/developers/applications
# Callback URL: https://your-domain.com/api/auth/callback/discord
DISCORD_ID=
DISCORD_SECRET=

# Simple Password Auth (no OAuth setup needed)
# Just set a password and you're done!
ADMIN_PASSWORD=

# ============================================
# ACCESS CONTROL
# ============================================

# Allowed users (comma-separated GitHub usernames or emails)
# Leave empty to allow all authenticated users
ALLOWED_USERS=
